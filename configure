#!/bin/sh

if [ $# -lt 1 ]; then
  echo "Syntax: configure --prefix=<dir>" >&2
  exit 1
fi
# 
# Very simple configure
#
if ! [ -f "src/main.c" ]; then
	echo "main.c not here" >&2
	exit 1
fi
if ! [ -f "src/fn.C" ]; then
	echo "fn.C not here" >&2
	exit 1
fi
echo "${1#--prefix=*}" >installdir 
exit 0 
